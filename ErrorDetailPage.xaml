<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ElectronicCorrectionNotebook.ErrorDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ElectronicCorrectionNotebook"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    x:Name="rootPage"
    >

    <StackPanel Margin="30" x:Name="rootPanel">
        <Grid>
            <TextBlock Text="Title 标题" FontSize="20" FontWeight="Bold" />
            <RatingControl IsClearEnabled="True"
                           x:Name="RatingChoose"
                           IsReadOnly="False" Caption="Importance"
                           HorizontalAlignment="Right" Margin="0,0,3,0"
                           />
        </Grid>
        <TextBox x:Name="TitleTextBox" TextChanged="TitleTextBox_TextChanged" FontSize="15" Margin="0,5,0,10" />

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Date 日期" FontSize="20" FontWeight="Bold" />
            
        </StackPanel>

        

        <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
            <DatePicker x:Name="DatePicker" FontSize="15" />
            <Button Content="Today 今天" Click="SetDateToTodayClick" Margin="5,0,0,0"/>
        </StackPanel>
        
        <TextBlock Text="Description 详细描述" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="DescriptionTextBox" FontSize="15" Margin="0,5,0,15" 
                 AcceptsReturn="True" Height="220" TextWrapping="Wrap" />

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Images 图片" FontSize="20" FontWeight="Bold" Margin="0,2,15,0"/>
            <Button Content="Choose images 选择图片" Click="OnSelectImageClick" Margin="0,0,10,0"/>
            <Button Content="Save all 保存全部" Click="OnSaveClick" Margin="0,0,10,0"/>
        </StackPanel>
        
        <ScrollViewer Height="200"  Margin="0, 10, 0, 10">
            <ItemsControl x:Name="ImagePanel">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <ContentDialog x:Name="ImageDialog" CloseButtonText="Close" PrimaryButtonText="在系统图片查看器中打开" 
                       PrimaryButtonClick="OpenInSystemViewerClick">
            <Image x:Name="DialogImage" Stretch="Uniform" ManipulationMode="All" />
        </ContentDialog>

        
        
    </StackPanel>
</Page>
